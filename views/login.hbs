<section id="info">
    <h1>Log In</h1>
    <h3 id="message">{{> messages}}</h3>
    <form id="infoForm" method="post" action="/loginUser">
        <label for="userLog" id="userLabel"><strong>Username</strong></label>
        <input type="text" id="userLog" name="userLog" maxlength="16"/>
        <br />
        <label for="password" id="passLabel"><strong>Password</strong></label>
        <input type="password" id="password" name="password" maxlength="16"/>
        <br />
        <input type="submit" id="submit" value="Log In" />
        <br />
        <span>New to MindHub? <a href="/signup" class="link">SIGN UP</a></span>
    </form>
</section>